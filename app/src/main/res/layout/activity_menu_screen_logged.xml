<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MenuScreenLoggedActivity">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="match_parent"
        android:layout_height="600px"
        android:src="@drawable/crypto_card_runners_logo"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/tv_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="Welcome, user!"
        app:layout_constraintTop_toBottomOf="@id/iv_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <Button
        android:id="@+id/btn_play"
        android:layout_width="450px"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="PLAY ON!"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_user"
        app:layout_constraintRight_toLeftOf="@id/btn_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        />

    <Button
        android:id="@+id/btn_profile"
        android:layout_width="450px"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Profile"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_user"
        app:layout_constraintLeft_toRightOf="@id/btn_play"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        />

    <Button
        android:id="@+id/btn_redeem"
        android:layout_width="450px"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Redeem"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btn_play"
        app:layout_constraintRight_toLeftOf="@id/btn_view"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/btn_view"
        android:layout_width="450px"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="View"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btn_profile"
        app:layout_constraintLeft_toRightOf="@id/btn_redeem"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/btn_trade"
        android:layout_width="450px"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Trade"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btn_redeem"
        app:layout_constraintRight_toLeftOf="@id/btn_about"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/btn_about"
        android:layout_width="450px"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="About"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btn_view"
        app:layout_constraintLeft_toRightOf="@id/btn_trade"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="450px"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Logout"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/tv_credit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:id="@+id/tv_credit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="by Bueno &amp; Deslate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>